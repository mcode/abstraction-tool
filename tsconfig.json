{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "outDir": "./dist",
    "declaration": true,
    "noEmit": false
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react"
  },
  "include": [
    "src/dataSource",
    "src/loaders",
    "src/components",
    "src/utils",
    "src/types",
    "index.js"
  ],
  "exclude": [
    "src/components/**/__tests__",
    "src/__tests__/**/*"
  ]
}
